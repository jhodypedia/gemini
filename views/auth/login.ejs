<% include('../layouts/main') %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card p-4 halo">
      <h3 class="mb-3">Masuk</h3>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>
      <form method="post" action="/auth/login">
        <div class="mb-2">
          <label class="form-label small">Email</label>
          <input name="email" class="form-control" placeholder="email@contoh.com" required>
        </div>
        <div class="mb-3">
          <label class="form-label small">Password</label>
          <input name="password" type="password" class="form-control" placeholder="••••••••" required>
        </div>
        <div class="d-grid">
          <button class="btn-ocean" type="submit"><i class="fa-solid fa-right-to-bracket"></i> Masuk</button>
        </div>
      </form>

      <div class="mt-3 text-center small">
        Belum punya akun? <a href="/auth/register">Daftar</a>
      </div>
    </div>
  </div>
</div>
