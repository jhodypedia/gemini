<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>PANSASTORE</title>

  <!-- Bootstrap, FontAwesome, SweetAlert2 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

  <!-- local styles -->
  <link rel="stylesheet" href="/public/css/style.css">

  <!-- small page meta for JS -->
  <meta id="meta-username" data-username="<%= user || '' %>" />
</head>
<body>
  <!-- NAVBAR -->
  <nav class="navbar">
    <div class="container d-flex align-items-center">
      <div class="brand">
        <div class="logo"><i class="fa-solid fa-water"></i></div>
        <div style="margin-left:10px;color:#fff;font-weight:700">Gemini VEO</div>
      </div>

      <div class="nav-actions ms-auto">
        <% if (user) { %>
          <div class="text-white small me-2 d-none d-md-block">Hi, <strong><%= user %></strong></div>
          <a class="btn btn-outline-light btn-sm me-2" href="/generated-video"><i class="fa-solid fa-layer-group"></i> My Videos</a>
          <a class="btn btn-outline-light btn-sm me-2" href="/set-apikey"><i class="fa-solid fa-key"></i> API Key</a>
          <% if (session && session.role === 'admin') { %>
            <a class="btn btn-outline-light btn-sm me-2" href="/admin/dashboard"><i class="fa-solid fa-chart-line"></i> Admin</a>
          <% } %>
          <a class="btn btn-light btn-sm" href="/auth/logout"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
        <% } else { %>
          <a class="btn btn-light btn-sm" href="/auth/login">Login</a>
        <% } %>
      </div>
    </div>
  </nav>

  <!-- MAIN -->
  <main class="container py-4">
    <%- body %>
  </main>

  <footer class="footer">
    <div class="container">
      <small>© <%= new Date().getFullYear() %> PansaStore — Built with ❤️</small>
    </div>
  </footer>

  <!-- JS libs -->
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <!-- app scripts -->
  <script src="/public/js/main.js"></script>
  <script src="/public/js/admin.js"></script>
</body>
</html>
